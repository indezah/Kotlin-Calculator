<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
<!--        bottom padding-->
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">horizontal</item>


    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
<!--        android:stateListAnimator="@null"-->
        <item name="android:stateListAnimator">@null</item>

        <item name="android:elevation">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>

        <!--        margin-->
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
<!--        border radius-->
<!--        <item name="android:background">@drawable/roun</item>-->
        <item name="android:background">@color/purpleback</item>
        <item name="android:radius">10dp</item>
        <item name="android:onClick">numberAction</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
<!--align vertically and horizontally center-->
        <item name="android:gravity">center</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">operationAction</item>
    </style>
</resources>